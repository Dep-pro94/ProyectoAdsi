<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.equipo_adsi.virtualkey1.DescripcionPuerta">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        >

    <ImageView
        android:id="@+id/foto"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/camera"
        />

    <Button
        android:id="@+id/tomarfoto"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/take_photo"
        style="@style/Button"
        android:layout_toRightOf="@+id/foto"
        android:layout_marginLeft="30dp"
        />

</LinearLayout>


    <TextView
        android:id="@+id/descripsion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/In_the_sena_telecommunications_center_of_industrial_production_the_gateway_Virtual_Key_which_will_be_located_in_the_software_development_environments_was_found."
        android:layout_below="@+id/linear1"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>
